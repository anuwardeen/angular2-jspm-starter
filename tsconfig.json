{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noEmitOnError": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./src/jspm_packages/**/*"
    ],
    "files": [
        "./src/app/services/gist.service.ts",
        "./src/app/starter/starter.component.spec.ts",
        "./src/app/starter/starter.component.ts",
        "./src/index.ts",
        "./src/typings/chai.d.ts",
        "./src/typings/es6-shim.d.ts",
        "./src/typings/mocha.d.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": true
    }
}
