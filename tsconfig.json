{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "baseUrl": "./src",
        "paths": {
            "angular2/*": [
                "./jspm_packages/npm/angular2@2.0.0-beta.8/*"
            ],
            "rxjs/*": [
                "./jspm_packages/npm/rxjs@5.0.0-beta.2/*"
            ]
        }
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./src/jspm_packages/**/*"
    ],
    "files": [
        "./src/app/services/gist.service.ts",
        "./src/app/starter/starter.component.spec.ts",
        "./src/app/starter/starter.component.ts",
        "./src/index.ts",
        "./src/typings/chai.d.ts",
        "./src/typings/es6-shim.d.ts",
        "./src/typings/mocha.d.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": true
    }
}
