{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noEmitOnError": false
    },
    "filesGlob": [
        "src/**/*.ts",
        "!src/jspm_packages/**/*"
    ],
    "files": [
        "src/index.ts",
        "src/starter/starter.component.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": true
    }
}
